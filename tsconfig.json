{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "modules/*": ["src/modules/*"],
      "database/*": ["src/database/*"],
      "config/*": ["src/config/*"],
      "mail/*": ["src/mail/*"],
      "utils/*": ["src/utils/*"]
    }
  }
}
